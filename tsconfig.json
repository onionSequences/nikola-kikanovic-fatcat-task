{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@homework-task": ["src/*"]
    },
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "es2020"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true
  },
  "include": [
    "src",
    "vite-env.d.ts"
  ]
}
